<!DOCTYPE html>
<html lang = "ja">
<head>
<meta charset="UTF-8">

<style>
#space {

background-color:aqua;
height:130vh;
}


#detayo {

opacity:0;
}



.alpha {

animation:alpha 3s;
animation-fill-mode:forwards;
}


@keyframes alpha {

0% {

opacity:0;
}


100% {

opacity:1;
}

}


</style>

</head>

<body>

<div id="space">

</div>

<!--好きな画像を貼ってください-->
<img id="detayo" src="detayo.svg">


<script>
function kantan(entries) {

if (entries[0].intersectionRatio == 0) {

return;
}

else
{

// alert("出たよ〜")
gazou.classList.add("alpha");
}

}

;

var gazou = document.getElementById("detayo");

var options = {

threshold:1
}

;

var observer = new IntersectionObserver(kantan,options);

observer.observe(gazou);
</script>

</body>
</html>